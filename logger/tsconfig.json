{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es6",
    "esModuleInterop": true,
    "rootDir": "src",
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "typeRoots": ["./process-env.d.ts"]
  },
  "exclude": ["dist"]
}
