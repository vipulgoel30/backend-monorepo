{
  "compilerOptions": {
    "lib": ["ES2022"],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es6",
    "esModuleInterop": true,
    "outDir": "dist",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "skipLibCheck": false,
    "strict": true,
    "allowImportingTsExtensions": true,
    "rewriteRelativeImportExtensions": true
  }
}
